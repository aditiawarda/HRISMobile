<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#FFF7EF"
                android:endColor="#FFF7EA"
                android:type="linear" />
            <stroke
                android:width="0dp"
                android:color="#C47E7E7E"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="20dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#FFE7BD"
                android:endColor="#FFBF85"
                android:type="linear" />
            <stroke
                android:width="0dp"
                android:color="#C47E7E7E"/>
        </shape>
    </item>
</selector>