<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="27dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#F4AA67"
                android:endColor="#E8BE75"
                android:type="linear" />
            <stroke
                android:width="0.5dp"
                android:color="#C47E7E7E"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="27dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#EC8325"
                android:endColor="#EFA524"
                android:type="linear" />
            <stroke
                android:width="0.3dp"
                android:color="#99676767"/>
        </shape>
    </item>
</selector>