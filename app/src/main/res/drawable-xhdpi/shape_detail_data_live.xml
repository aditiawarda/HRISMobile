<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp"
                android:bottomRightRadius="6dp"
                android:bottomLeftRadius="6dp" />
            <gradient
                android:angle="360"
                android:startColor="#53C579"
                android:endColor="#EE7474"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="5dp"/>
            <gradient
                android:angle="360"
                android:startColor="#F8FFFA"
                android:endColor="#FFF9F9"
                android:type="linear" />
        </shape>
    </item>

</layer-list>