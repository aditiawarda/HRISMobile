<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#F4A061"
                android:endColor="#7C9CF6"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#FF6D00"
                android:endColor="#6688E6"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>