<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#3D9ACD"
                android:endColor="#4FC38D"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#248AC3"
                android:endColor="#28B372"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>