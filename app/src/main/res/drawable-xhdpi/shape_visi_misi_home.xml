<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#EDB560"
                android:endColor="#FFD9B7"
                android:type="linear" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#EA9A24"
                android:endColor="#FFC693"
                android:type="linear" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>

