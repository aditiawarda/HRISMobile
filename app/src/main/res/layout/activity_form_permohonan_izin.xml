<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormPermohonanIzinActivity">

    <RelativeLayout
        android:layout_marginRight="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="90dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/form_part"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/shape_monitoring_detail">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="bottom|right">

                                            <LinearLayout
                                                android:layout_width="85dp"
                                                android:layout_height="100dp"
                                                android:layout_marginRight="8dp"
                                                android:layout_marginBottom="-20dp"
                                                android:background="@drawable/ic_documents" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/nama_karyawan_tv"
                                                android:layout_width="wrap_content"
                                                android:drawablePadding="5dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:textColor="@color/white"
                                                android:text="-"/>

                                            <TextView
                                                android:layout_marginTop="7dp"
                                                android:layout_marginBottom="7dp"
                                                android:layout_width="25dp"
                                                android:layout_height="1dp"
                                                android:textSize="13dp"
                                                android:background="@color/white"/>

                                            <TextView
                                                android:id="@+id/nik_karyawan_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="13dp"
                                                android:textColor="@color/white"
                                                android:text="-"/>

                                            <TextView
                                                android:id="@+id/detail_karyawan_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="12dp"
                                                android:textColor="@color/white"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginBottom="5dp"
                                                android:text="-"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="#696969"
                                        android:text="Tipe Izin :"/>

                                    <LinearLayout
                                        android:id="@+id/tipe_choice_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/tipe_choice_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#B15735"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_down"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#696969"
                                    android:text="Dari Tanggal :"/>

                                <LinearLayout
                                    android:id="@+id/mulai_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingStart="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:orientation="vertical"
                                            android:gravity="center|left">

                                            <TextView
                                                android:id="@+id/mulai_date_pilih"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#B15735"
                                                android:textSize="13dp"
                                                android:textStyle="bold"
                                                android:text=""/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_alignParentRight="true"
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_date_mulai"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#696969"
                                    android:text="Sampai Tanggal :"/>

                                <LinearLayout
                                    android:id="@+id/akhir_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingStart="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:orientation="vertical"
                                            android:gravity="center|left">

                                            <TextView
                                                android:id="@+id/akhir_date_pilih"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#B15735"
                                                android:textSize="13dp"
                                                android:textStyle="bold"
                                                android:text=""/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_alignParentRight="true"
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_date_akhir"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#696969"
                                    android:text="Alasan :"/>

                                <EditText
                                    android:id="@+id/alasan_tv"
                                    android:layout_width="match_parent"
                                    android:gravity="top"
                                    android:layout_height="wrap_content"
                                    android:minHeight="80dp"
                                    android:paddingTop="13dp"
                                    android:paddingBottom="13dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/shape_input_form"
                                    android:drawablePadding="10dp"
                                    android:textColor="#595959"
                                    android:hint=""
                                    android:textSize="14dp"
                                    android:textColorHint="#595959"
                                    android:textColorHighlight="#FFE1BC"/>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/upload_file_part"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="#696969"
                                        android:text="Surat Sakit :"/>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight=".50"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:visibility="gone"
                                                android:id="@+id/mark_upload"
                                                android:layout_marginTop="3dp"
                                                android:layout_width="28dp"
                                                android:layout_height="28dp"
                                                android:background="@drawable/ic_baseline_check_circle_outline"
                                                android:orientation="horizontal" />

                                            <TextView
                                                android:id="@+id/status_upload_tv"
                                                android:layout_marginTop="7dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textSize="13dp"
                                                android:textColor="#696969"
                                                android:text="Belum diunggah"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight=".50"
                                            android:gravity="right"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:id="@+id/upload_btn"
                                                android:layout_width="wrap_content"
                                                android:paddingTop="5dp"
                                                android:paddingBottom="5dp"
                                                android:paddingRight="15dp"
                                                android:paddingLeft="15dp"
                                                android:background="@drawable/shape_btn_upload"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:id="@+id/label_unggah"
                                                    android:layout_width="wrap_content"
                                                    android:gravity="center"
                                                    android:textColor="@color/white"
                                                    android:drawablePadding="5dp"
                                                    android:textSize="12dp"
                                                    android:drawableLeft="@drawable/ic_baseline_upload_file"
                                                    android:layout_height="wrap_content"
                                                    android:text="Unggah"/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:visibility="gone"
                                                android:id="@+id/view_btn"
                                                android:layout_width="wrap_content"
                                                android:paddingTop="5dp"
                                                android:paddingBottom="5dp"
                                                android:paddingRight="5dp"
                                                android:paddingLeft="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:background="@drawable/shape_btn_view_upload"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="20dp"
                                                    android:gravity="center"
                                                    android:background="@drawable/ic_baseline_content_surat"
                                                    android:layout_height="20dp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/submit_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginTop="15dp"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="12dp"
                                    android:background="@drawable/shape_btn"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:drawableLeft="@drawable/ic_baseline_send_form"
                                        android:drawablePadding="7dp"
                                        android:textSize="13dp"
                                        android:drawableTint="@color/white"
                                        android:textColor="@color/white"
                                        android:text="KIRIM"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/success_submit"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="30dp"
                                        android:background="@drawable/shape_success"
                                        android:orientation="vertical"
                                        android:paddingLeft="20dp"
                                        android:paddingTop="50dp"
                                        android:paddingRight="20dp"
                                        android:paddingBottom="30dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Permohonan Terkirim"
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:text="Permohonan anda telah terkirim dan disampaikan kepada Kepala Bagian / Supervisor untuk persetujuan."
                                            android:textAlignment="center"
                                            android:textColor="@color/white"
                                            android:textSize="13dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center">

                                        <ImageView
                                            android:background="@drawable/shape_ring_success"
                                            android:id="@+id/success_gif"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/success_ic" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/view_permohonan_btn"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/shape_btn_view"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="13dp"
                                        android:textColor="@color/white"
                                        android:text="LIHAT PERMOHONAN"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/go_to_home"
                                        android:layout_width="0dp"
                                        android:layout_weight=".20"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/shape_second_btn"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:textStyle="bold"
                                            android:background="@drawable/ic_baseline_home"
                                            android:textColor="@color/white" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/go_to_user"
                                        android:layout_width="0dp"
                                        android:layout_weight=".80"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/shape_btn_chat"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"
                                            android:textSize="13dp"
                                            android:textColor="@color/white"
                                            android:text="DASBOARD"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_profile"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="11dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back">

                            <TextView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:background="@drawable/ic_baseline_home"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="FORM IZIN"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.flipboard.bottomsheet.BottomSheetLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

        </com.flipboard.bottomsheet.BottomSheetLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>