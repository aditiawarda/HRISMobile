<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="60dp"
                        android:layout_marginBottom="-2dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="13dp"
                                        android:paddingRight="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingBottom="13dp"
                                        android:background="@drawable/shape_attantion_head">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="13dp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="#B1670B"
                                            android:textStyle="bold"
                                            android:text="RIWAYAT ABSENSI TERAKHIR"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="13dp"
                                        android:layout_marginTop="-2dp"
                                        android:paddingRight="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingBottom="13dp"
                                        android:background="@drawable/shape_attantion_body_2">

                                        <TextView
                                            android:id="@+id/name_of_user_tv"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="13dp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="#B1670B"
                                            android:textStyle="bold"
                                            android:text=""/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/record_absen_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="10dp"
                                            android:background="@drawable/shape_detail_2"
                                            android:gravity="center|left">

                                            <TextView
                                                android:id="@+id/date_absen_tv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/white"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:drawablePadding="10dp"
                                                android:drawableTint="@color/white"
                                                android:drawableLeft="@drawable/ic_baseline_date"
                                                android:textStyle="bold"
                                                android:textSize="12dp"
                                                android:text="---- - -- --"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingTop="10dp"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="10dp"
                                            android:paddingBottom="10dp"
                                            android:background="@drawable/shape_shift_last"
                                            android:gravity="center|left">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="horizontal">

                                                    <TextView
                                                        android:id="@+id/shift_name"
                                                        android:layout_width="0dp"
                                                        android:layout_weight=".50"
                                                        android:layout_marginRight="2dp"
                                                        android:layout_height="wrap_content"
                                                        android:ellipsize="end"
                                                        android:maxLines="1"
                                                        android:singleLine="true"
                                                        android:drawableLeft="@drawable/ic_baseline_work_last_history"
                                                        android:drawablePadding="7dp"
                                                        android:drawableTint="#9E6216"
                                                        android:text="---- - ----"
                                                        android:textColor="#9E6216"
                                                        android:textSize="12dp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/shift_time"
                                                        android:layout_width="0dp"
                                                        android:layout_weight=".50"
                                                        android:gravity="right"
                                                        android:layout_marginRight="2dp"
                                                        android:layout_height="wrap_content"
                                                        android:ellipsize="end"
                                                        android:maxLines="1"
                                                        android:singleLine="true"
                                                        android:layout_alignParentRight="true"
                                                        android:drawableRight="@drawable/ic_baseline_time_last_history"
                                                        android:drawablePadding="7dp"
                                                        android:drawableTint="#9E6216"
                                                        android:text="-- : -- - -- : --"
                                                        android:textColor="#9E6216"
                                                        android:textSize="12dp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                            </RelativeLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-1dp"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/shape_checkin_2"
                                                android:layout_weight=".50"
                                                android:layout_marginRight="-0.5dp"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:textStyle="bold"
                                                    android:paddingTop="7dp"
                                                    android:layout_marginTop="1dp"
                                                    android:layout_marginLeft="1dp"
                                                    android:layout_marginRight="1dp"
                                                    android:paddingBottom="7dp"
                                                    android:paddingLeft="15dp"
                                                    android:paddingRight="15dp"
                                                    android:background="#4143C86F"
                                                    android:textSize="11dp"
                                                    android:textColor="#147C19"
                                                    android:text="Check In"/>

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="1dp"
                                                    android:layout_marginLeft="1dp"
                                                    android:layout_marginRight="1dp"
                                                    android:layout_marginBottom="8dp"/>

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:id="@+id/date_checkin_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_date_range"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:layout_marginBottom="5dp"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="---- - -- - --"/>

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:id="@+id/time_checkin_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_time"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:layout_marginBottom="5dp"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="-- : -- : -- ---"/>

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:id="@+id/checkin_point_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_place"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="-"/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/shape_checkout_2"
                                                android:layout_marginLeft="-0.5dp"
                                                android:layout_weight=".50"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:textStyle="bold"
                                                    android:paddingTop="7dp"
                                                    android:layout_marginTop="1dp"
                                                    android:layout_marginLeft="1dp"
                                                    android:layout_marginRight="1dp"
                                                    android:paddingBottom="7dp"
                                                    android:paddingLeft="15dp"
                                                    android:paddingRight="15dp"
                                                    android:background="#40FF8080"
                                                    android:textSize="11dp"
                                                    android:textColor="@color/red"
                                                    android:text="Check Out"/>

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="1dp"
                                                    android:layout_marginLeft="1dp"
                                                    android:layout_marginRight="1dp"
                                                    android:layout_marginBottom="8dp" />

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:id="@+id/date_checkout_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_date_range"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:layout_marginBottom="5dp"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="---- - -- - --"/>

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:id="@+id/time_checkout_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_time"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:layout_marginBottom="5dp"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="-- : -- : -- ---"/>

                                                <TextView
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:id="@+id/checkout_point_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/ic_baseline_place"
                                                    android:drawablePadding="7dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:textSize="11dp"
                                                    android:textColor="#696969"
                                                    android:text="-"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginBottom="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:background="#3CCFCFCF"/>

                                <LinearLayout
                                    android:id="@+id/filter_date_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:background="@drawable/shape_btn"
                                    android:gravity="center">

                                    <TextView
                                        android:drawableLeft="@drawable/ic_baseline_date"
                                        android:drawablePadding="7dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textSize="13dp"
                                        android:textColor="@color/white"
                                        android:text="FILTER RIWAYAT ABSENSI"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/filter_date_choice"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="#696969"
                                        android:text="Filter Tanggal :"/>

                                    <LinearLayout
                                        android:id="@+id/filter_date_choice_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="match_parent"
                                                android:layout_marginRight="50dp"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/filter_date_choice_tv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:textColor="#B15735"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/change_filter_date_btn"
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_date"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingBottom="30dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/attantion_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:paddingTop="15dp"
                                        android:orientation="vertical"
                                        android:background="@drawable/shape_attantion">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="#C68D46"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:text="Panduan :"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#C68D46"
                                            android:textSize="11dp"
                                            android:layout_marginTop="7dp"
                                            android:text="Anda dapat melihat riwayat absensi berdasarkan tanggal yang dipilih (filter tanggal), data yang tampil adalah data riwayat absensi 1 minggu."/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/no_data_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:paddingTop="55dp"
                                        android:paddingBottom="35dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="85dp"
                                            android:layout_height="85dp"
                                            android:layout_marginBottom="5dp"
                                            android:background="@drawable/empty_image"
                                            android:textAlignment="center"
                                            android:textSize="12dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-8dp"
                                            android:text="Data tidak tersedia"
                                            android:textAlignment="center"
                                            android:textColor="#E1BB8A"
                                            android:textSize="12dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Data berdasarkan filter yang anda pilih tidak tersedia"
                                            android:textAlignment="center"
                                            android:textColor="#ECC28D"
                                            android:textSize="10dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/loading_data_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingLeft="20dp"
                                        android:paddingTop="60dp"
                                        android:paddingRight="20dp"
                                        android:paddingBottom="35dp"
                                        android:visibility="gone">

                                        <ImageView
                                            android:id="@+id/loading_data"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_marginBottom="5dp"
                                            app:srcCompat="@drawable/loading_sgn_digital" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-8dp"
                                            android:text="Memuat data"
                                            android:textAlignment="center"
                                            android:textColor="#E1BB8A"
                                            android:textSize="12dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Tunggu beberapa saat"
                                            android:textAlignment="center"
                                            android:textColor="#ECC28D"
                                            android:textSize="10dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:visibility="gone"
                                        android:id="@+id/no_connect_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp"
                                        android:paddingBottom="40dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:paddingTop="40dp"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="55dp"
                                            android:layout_height="55dp"
                                            android:layout_marginTop="20dp"
                                            android:textAlignment="center"
                                            android:layout_marginBottom="10dp"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:background="@drawable/no_connection_image"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textAlignment="center"
                                            android:textSize="15dp"
                                            android:textStyle="bold"
                                            android:textColor="#7C7C7C"
                                            android:text="Koneksi terputus!"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textAlignment="center"
                                            android:textSize="11dp"
                                            android:layout_marginTop="7dp"
                                            android:textColor="#7C7C7C"
                                            android:text="Pastikan perangkat anda terhubung dengan internet."/>

                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/history_absen_rv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:visibility="gone">
                                    </androidx.recyclerview.widget.RecyclerView>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="RIWAYAT ABSENSI"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical" />

        </LinearLayout>

    </com.flipboard.bottomsheet.BottomSheetLayout>

</androidx.constraintlayout.widget.ConstraintLayout>