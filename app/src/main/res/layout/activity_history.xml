<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-3dp"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@id/scrollView"
                android:background="@drawable/shape_head_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="60dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="-2dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:paddingBottom="13dp"
                                    android:background="@drawable/shape_attantion">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textSize="13dp"
                                        android:textColor="#B1670B"
                                        android:textStyle="bold"
                                        android:text="RIWAYAT ABSENSI TERAKHIR"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/record_absen_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="20dp"
                                        android:background="@drawable/shape_detail_2"
                                        android:gravity="center|left">

                                        <TextView
                                            android:id="@+id/date_absen_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:drawablePadding="10dp"
                                            android:drawableTint="@color/white"
                                            android:drawableLeft="@drawable/ic_baseline_date"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:text="-"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-1dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_checkin_2"
                                            android:layout_weight=".50"
                                            android:layout_marginRight="-0.5dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textStyle="bold"
                                                android:paddingTop="7dp"
                                                android:layout_marginTop="1dp"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="1dp"
                                                android:paddingBottom="7dp"
                                                android:paddingLeft="15dp"
                                                android:paddingRight="15dp"
                                                android:background="#4143C86F"
                                                android:textSize="11dp"
                                                android:textColor="#147C19"
                                                android:text="Check In"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="10dp"/>

                                            <TextView
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginRight="15dp"
                                                android:id="@+id/time_checkin_tv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/ic_baseline_time"
                                                android:drawablePadding="7dp"
                                                android:layout_marginBottom="5dp"
                                                android:textSize="11dp"
                                                android:text="-- : -- : --"/>

                                            <TextView
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginRight="15dp"
                                                android:layout_marginBottom="10dp"
                                                android:id="@+id/checkin_point_tv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/ic_baseline_place"
                                                android:drawablePadding="7dp"
                                                android:textSize="11dp"
                                                android:text="-"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_checkout_2"
                                            android:layout_marginLeft="-0.5dp"
                                            android:layout_weight=".50"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textStyle="bold"
                                                android:paddingTop="7dp"
                                                android:layout_marginTop="1dp"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="1dp"
                                                android:paddingBottom="7dp"
                                                android:paddingLeft="15dp"
                                                android:paddingRight="15dp"
                                                android:background="#40FF8080"
                                                android:textSize="11dp"
                                                android:textColor="@color/red"
                                                android:text="Check Out"/>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginLeft="1dp"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="10dp" />

                                            <TextView
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginRight="15dp"
                                                android:id="@+id/time_checkout_tv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/ic_baseline_time"
                                                android:drawablePadding="7dp"
                                                android:layout_marginBottom="5dp"
                                                android:textSize="11dp"
                                                android:text="-- : -- : --"/>

                                            <TextView
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginRight="15dp"
                                                android:layout_marginBottom="10dp"
                                                android:id="@+id/checkout_point_tv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:drawableLeft="@drawable/ic_baseline_place"
                                                android:drawablePadding="7dp"
                                                android:textSize="11dp"
                                                android:text="-"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginBottom="25dp"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#3CCFCFCF"/>

                            <LinearLayout
                                android:id="@+id/filter_date_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shape_btn"
                                android:gravity="center">

                                <TextView
                                    android:drawableLeft="@drawable/ic_baseline_date"
                                    android:drawablePadding="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="FILTER RIWAYAT ABSENSI"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/filter_date_choice"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Filter Tanggal :"/>

                                <LinearLayout
                                    android:id="@+id/filter_date_choice_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingStart="20dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:orientation="vertical"
                                            android:gravity="center|left">

                                            <TextView
                                                android:id="@+id/filter_date_choice_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#A8C74A1A"
                                                android:textStyle="bold"
                                                android:text=""/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/change_filter_date_btn"
                                            android:layout_alignParentRight="true"
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_date"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/attantion_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:paddingBottom="20dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="15dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/shape_attantion">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#C68D46"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:text="Panduan :"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:textColor="#C68D46"
                                        android:textSize="11dp"
                                        android:layout_marginTop="7dp"
                                        android:text="Anda dapat melihat riwayat absensi berdasarkan tanggal yang dipilih (filter tanggal), data yang tampil adalah data riwayat absensi 1 minggu."/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/no_data_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:paddingBottom="40dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="40dp"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginTop="20dp"
                                        android:textAlignment="center"
                                        android:layout_marginBottom="10dp"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:background="@drawable/ic_baseline_no_data"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:text="Data belum tersedia!"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="11dp"
                                        android:layout_marginTop="7dp"
                                        android:text="Data berdasarkan filter yang anda pilih belum tersedia."/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/loading_data_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:paddingBottom="40dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="40dp"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/loading_data"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_marginBottom="5dp"
                                        app:srcCompat="@drawable/loading" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:text="Memuat data"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="11dp"
                                        android:layout_marginTop="7dp"
                                        android:text="Tunggu beberapa saat"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/no_connect_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:paddingBottom="40dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:paddingTop="40dp"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginTop="20dp"
                                        android:textAlignment="center"
                                        android:layout_marginBottom="10dp"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:background="@drawable/ic_baseline_connection_off"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:text="Koneksi terputus!"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textSize="11dp"
                                        android:layout_marginTop="7dp"
                                        android:text="Pastikan koneksi internet anda aktif."/>

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/history_absen_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                </androidx.recyclerview.widget.RecyclerView>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/shape_back">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/ic_baseline_chevron_back"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_btn"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/shape_back">

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_baseline_home"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:gravity="center|right">

            <TextView
                android:id="@+id/name_of_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:text="RIWAYAT ABSENSI"/>

        </LinearLayout>

    </RelativeLayout>

    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical" />

        </LinearLayout>

    </com.flipboard.bottomsheet.BottomSheetLayout>

</androidx.constraintlayout.widget.ConstraintLayout>