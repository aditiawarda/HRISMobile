<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmailShowActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="UselessParent,VisualLintBounds">

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/four_dots"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="23dp"
                        android:background="@drawable/shape_feel_login"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="DisableBaselineAlignment,UselessParent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="18dp"
                                android:paddingBottom="18dp"
                                android:layout_weight=".78"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/nama_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data..."
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/nik_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data..."
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/jabatan_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data..."
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/detail_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data..."
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".22"
                                android:gravity="right|center"
                                android:orientation="vertical"
                                tools:ignore="RtlHardcoded">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/default_profile"
                                        app:civ_border_color="#BDBDBD"
                                        app:civ_border_width="1.8dp"
                                        tools:ignore="ImageContrastCheck,TooDeepLayout" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/profile_img"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/default_profile"
                                        app:civ_border_color="#BDBDBD"
                                        app:civ_border_width="1.8dp"
                                        tools:ignore="ImageContrastCheck" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/available_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="Email Terdaftar :"
                            android:textColor="#A1FFFFFF"
                            android:textSize="12dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                        <TextView
                            android:id="@+id/email_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memuat data..."
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/not_available_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="43dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                tools:ignore="TooDeepLayout">

                                <TextView
                                    android:id="@+id/ic_person"
                                    android:layout_width="25dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_baseline_mail"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/mail_ed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_feel_login"
                                android:drawablePadding="10dp"
                                android:hint="Masukkan email..."
                                android:inputType="textEmailAddress"
                                android:padding="10dp"
                                android:paddingStart="43dp"
                                android:textColor="@color/white"
                                android:textColorHighlight="#EC9426"
                                android:textColorHint="#BFFFF3E9"
                                android:textSize="17dp"
                                tools:ignore="Autofill,HardcodedText,RtlSymmetry,SpUsage,TextSizeCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/shapelogin"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/loading_sending"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginRight="7dp"
                            android:visibility="gone"
                            android:indeterminateTint="@color/colorPrimaryDark"
                            tools:ignore="RtlHardcoded" />

                        <LinearLayout
                            android:id="@+id/ic_sending"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="7dp"
                            android:background="@drawable/ic_baseline_send"
                            tools:ignore="RtlHardcoded"
                            android:orientation="vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/colorPrimary"
                            android:text="KIRIM OTP"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,UnusedAttribute,UseCompatTextViewDrawableXml,TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <com.chaos.view.PinView
                            android:id="@+id/otp_form"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:padding="5dp"
                            android:hint="----"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColorHint="#63FFFFFF"
                            app:cursorColor="@color/white"
                            app:cursorWidth="2dp"
                            app:hideLineWhenFilled="false"
                            app:itemCount="4"
                            app:itemHeight="48dp"
                            app:itemRadius="12dp"
                            app:itemSpacing="8dp"
                            app:itemWidth="48dp"
                            app:lineColor="@color/white"
                            app:lineWidth="1.8dp"
                            app:viewType="rectangle"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/shape_bar_chat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                tools:ignore="UselessParent,VisualLintBounds">

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:background="@drawable/shape_back_2"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="1.5dp"
                        android:background="@drawable/ic_baseline_chevron_back"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="right|center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:paddingRight="-2.5dp"
                        android:singleLine="true"
                        android:text="LUPA PASSWORD "
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextSizeCheck" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

    </com.flipboard.bottomsheet.BottomSheetLayout>

</androidx.constraintlayout.widget.ConstraintLayout>