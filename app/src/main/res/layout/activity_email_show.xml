<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmailShowActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="UselessParent,VisualLintBounds">

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/four_dots"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="23dp"
                        android:background="@drawable/shape_feel_login"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="DisableBaselineAlignment,UselessParent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="18dp"
                                android:paddingBottom="18dp"
                                android:layout_weight=".75"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/nama_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NAMA KARYAWAN"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/nik_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0000011"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/jabatan_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Staff"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/detail_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="EDP | RND"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".25"
                                android:gravity="right|center"
                                android:orientation="vertical"
                                tools:ignore="RtlHardcoded">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/default_profile"
                                        app:civ_border_color="#BDBDBD"
                                        app:civ_border_width="1dp"
                                        tools:ignore="ImageContrastCheck" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/profile_image"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/default_profile"
                                        app:civ_border_color="#BDBDBD"
                                        app:civ_border_width="1dp"
                                        tools:ignore="ImageContrastCheck" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/shapelogin"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/loadingProgressBar"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginRight="7dp"
                            android:indeterminateTint="@color/colorPrimaryDark"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SUBMIT"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/shape_bar_chat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:background="@drawable/shape_back_2"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="1.5dp"
                        android:background="@drawable/ic_baseline_chevron_back"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="right|center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:paddingRight="-2.5dp"
                        android:singleLine="true"
                        android:text="LUPA PASSWORD "
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextSizeCheck" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical" />

        </LinearLayout>

    </com.flipboard.bottomsheet.BottomSheetLayout>

</androidx.constraintlayout.widget.ConstraintLayout>