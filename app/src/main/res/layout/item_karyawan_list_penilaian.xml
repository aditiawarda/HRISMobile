<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_pengumuman"
        android:orientation="vertical"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:id="@+id/waiting_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_baseline_timelapse_waiting" />

                    <TextView
                        android:id="@+id/waiting_mark_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:singleLine="true"
                        android:text="Menunggu Konfirmasi"
                        android:textColor="#D32F2F"
                        android:textSize="11dp"
                        tools:ignore="HardcodedText,RtlSymmetry,SpUsage" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/default_profile"
                            app:civ_border_color="#BDBDBD"
                            app:civ_border_width="1dp"
                            tools:ignore="ImageContrastCheck" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/default_profile"
                            app:civ_border_color="#BDBDBD"
                            app:civ_border_width="1dp"
                            tools:ignore="ImageContrastCheck" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/nama_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="75dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="#C16D02"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                        <TextView
                            android:id="@+id/nik_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="75dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="#C16D02"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                        <TextView
                            android:id="@+id/detail_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="75dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="- | - | -"
                            android:textColor="#C16D02"
                            android:textSize="11dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="RtlHardcoded">

                    <LinearLayout
                        android:background="@drawable/shape_nilai_label"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PREDIKAT"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/shape_nilai"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="-14dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/predikat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#020202"
                            android:textSize="13dp"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/acc_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="ACCEPTED"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#26982B"
                        android:visibility="gone"
                        android:textSize="11dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                    <TextView
                        android:id="@+id/rej_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="REJECTED"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#CD4135"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textSize="11dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tanggal_buat_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Dinilai -"
                    android:textColor="#939393"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/shape_ornament_2"
            tools:ignore="VisualLintBounds" />

    </LinearLayout>

</RelativeLayout>