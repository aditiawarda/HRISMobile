                        android:layout_height="20dp"
                        android:background="@drawable/success"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/katolik_btn"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
