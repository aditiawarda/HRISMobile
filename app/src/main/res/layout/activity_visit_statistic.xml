<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitStatisticActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="82dp"
                            android:layout_marginBottom="5dp"
                            android:text="Pilih Bulan :"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="#696969"
                            android:textSize="12dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                        <LinearLayout
                            android:id="@+id/bulan_btn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingStart="20dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/shape_feel"
                            android:orientation="horizontal"
                            tools:ignore="RtlSymmetry">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    android:gravity="center|left"
                                    tools:ignore="RelativeOverlap,RtlHardcoded">

                                    <TextView
                                        android:id="@+id/bulan_pilih"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#B15735"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:text=""
                                        tools:ignore="SpUsage,TooDeepLayout" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_btn"
                                    android:gravity="center"
                                    tools:ignore="RtlHardcoded">

                                    <TextView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:background="@drawable/ic_baseline_date"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:gravity="center"
                            android:paddingHorizontal="30dp"
                            tools:ignore="UselessParent">

                            <RelativeLayout
                                android:id="@+id/piechart_part"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/piechart"
                                    android:layout_marginBottom="-40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/total_visit_tv"
                                    android:layout_alignParentTop="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Total Kunjungan :"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/loading_data_part"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ProgressBar
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:indeterminateTint="@color/colorAccent2"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="25dp"
                                    tools:ignore="RtlHardcoded,TooDeepLayout" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/no_data_part"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/empty_image"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Data tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Statistik kunjungan tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="#3CCFCFCF" />

                        <LinearLayout
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Statistik Kunjungan Sales"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp"
                                android:layout_marginBottom="5dp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_sales_rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </androidx.recyclerview.widget.RecyclerView>

                            <LinearLayout
                                android:id="@+id/no_data_sales_part"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="75dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/empty_image"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Data tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Statistik sales tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loading_data_sales_part"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="20dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="95dp"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ProgressBar
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:indeterminateTint="@color/colorAccent2"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="25dp"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_marginTop="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/shape_bar_chat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            tools:ignore="UselessParent,VisualLintBounds">

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:background="@drawable/shape_back_2"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="1.5dp"
                    android:background="@drawable/ic_baseline_chevron_back"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>

            <LinearLayout
                android:gravity="right|center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="STATISTIK KUNJUNGAN"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>