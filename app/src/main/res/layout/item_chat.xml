<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/date_chat_part"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_date_chat"
                android:layout_width="wrap_content"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="Hari ini"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sender_part"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_sender_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="9dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_de"
                    android:textSize="16dp"
                    android:text=""/>

                <LinearLayout
                    android:gravity="bottom|right"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/send_mark"
                        android:background="@drawable/chat_send_status"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/read_mark"
                        android:background="@drawable/chat_read_status"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/time_sender"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DE5A5A5A"
                        android:textSize="11dp"
                        android:text="12:34"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reciever_part"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_receiver_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="9dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_reciver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_de"
                    android:textSize="16dp"
                    android:text=""/>

                <TextView
                    android:id="@+id/time_reciever"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DE5A5A5A"
                    android:layout_marginTop="3dp"
                    android:textSize="11dp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>