<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormSdmActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/form_part"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="90dp"
                            android:paddingBottom="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Keterangan :"
                                    android:textColor="#696969"
                                    android:textSize="12dp" />

                                <LinearLayout
                                    android:id="@+id/pilih_keterangan_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingStart="20dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:orientation="vertical"
                                            android:gravity="center|left">

                                            <TextView
                                                android:id="@+id/keterangan_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#B15735"
                                                android:textSize="13dp"
                                                android:textStyle="bold"
                                                android:text=""/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_alignParentRight="true"
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_down"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="#3CCFCFCF"/>

                            <!-- Form Penerimaan -->
                            <LinearLayout
                                android:id="@+id/form_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="BARU"
                                    android:textColor="#E37146"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="#696969"
                                        android:text="Nama :"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/shape_feel_disable"
                                        android:gravity="center|left"
                                        android:orientation="horizontal"
                                        android:paddingStart="20dp"
                                        android:paddingEnd="20dp">

                                        <TextView
                                            android:id="@+id/nama_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="#B15735"
                                            android:textSize="13dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Unit Bisnis :"
                                        android:textColor="#696969"
                                        android:textSize="12dp" />

                                    <LinearLayout
                                        android:id="@+id/f1_unit_bisnis_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/f1_unit_bisnis_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#B15735"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_down"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Departemen :"
                                        android:textColor="#696969"
                                        android:textSize="12dp" />

                                    <LinearLayout
                                        android:id="@+id/f1_departemen_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/f1_departemen_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#B15735"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_down"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Bagian :"
                                        android:textColor="#696969"
                                        android:textSize="12dp" />

                                    <LinearLayout
                                        android:id="@+id/f1_bagian_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/f1_bagian_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#B15735"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_down"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Jabatan :"
                                        android:textColor="#696969"
                                        android:textSize="12dp" />

                                    <LinearLayout
                                        android:id="@+id/f1_jabatan_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:paddingStart="20dp"
                                        android:background="@drawable/shape_feel"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="40dp"
                                                android:orientation="vertical"
                                                android:gravity="center|left">

                                                <TextView
                                                    android:id="@+id/f1_jabatan_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#B15735"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold"
                                                    android:text=""/>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_alignParentRight="true"
                                                android:layout_width="40dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/shape_btn"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:background="@drawable/ic_baseline_down"/>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="#696969"
                                        android:text="Komponen Gaji :"/>

                                    <EditText
                                        android:id="@+id/f1_komponen_gaji_tv"
                                        android:layout_width="match_parent"
                                        android:gravity="center|left"
                                        android:layout_height="40dp"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:inputType="text"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/shape_input_form"
                                        android:drawablePadding="10dp"
                                        android:textColor="#595959"
                                        android:hint=""
                                        android:textSize="14dp"
                                        android:textColorHint="#595959"
                                        android:textColorHighlight="#FFE1BC"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/submit_btn"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shape_btn"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="7dp"
                                    android:drawableTint="@color/white"
                                    android:text="AJUKAN"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/success_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="23dp"
                            android:paddingTop="85dp"
                            android:paddingRight="23dp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/shape_success"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="50dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="30dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Penilaan SDM Selesai"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/message_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:text="Penilaian atas nama - dengan NIK - telah berhasil."
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="13dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/success_gif"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/shape_ring_success"
                                        android:src="@drawable/success_ic" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/view_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_success"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="@color/white"
                                    android:text="LIHAT HASIL PENILAIAN"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/title_btn"
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="FORM SDM"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.flipboard.bottomsheet.BottomSheetLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

        </com.flipboard.bottomsheet.BottomSheetLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>