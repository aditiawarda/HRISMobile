<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/shape_bg_expand_absensi_field"
        app:el_duration="300"
        app:el_expanded="false">

        <!-- Data Absensi  -->
        <LinearLayout
            android:id="@+id/part_hadir"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_record_checkin"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="---- - -- - --"
                    android:textColor="#818181"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/time_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-- : -- : -- ---"
                    android:textColor="#555555"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/checkin_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="#818181"
                    android:textSize="9dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_bg_record_checkout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight=".50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="---- - -- - --"
                    android:textColor="#818181"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/time_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="-- : -- : -- ---"
                    android:textColor="#555555"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/checkout_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="#818181"
                    android:textSize="9dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Diliburkan  -->
        <LinearLayout
            android:id="@+id/part_diliburkan"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_record_diliburkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Diliburkan/Lay Off"
                android:textColor="#378AD3"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Izin / Cuti  -->
        <LinearLayout
            android:id="@+id/part_izin"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_record_izin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:id="@+id/alasan_izin_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text=""
                android:textColor="#9172DC"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Libur/Tanggal Merah  -->
        <LinearLayout
            android:id="@+id/part_libur"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_record_libur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:id="@+id/dalam_rangka_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text=""
                android:textColor="#CC8D3E"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Minggu  -->
        <LinearLayout
            android:id="@+id/part_minggu"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_record_libur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Libur Hari Minggu"
                android:textColor="#CC8D3E"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Alpha  -->
        <LinearLayout
            android:id="@+id/part_alpha"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_record_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Tanpa Keterangan"
                android:textColor="#DC6664"
                android:textSize="12dp" />

        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>

    <LinearLayout
        android:id="@+id/expand_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_bg_expand_absensi"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-15dp"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_ornament_absensi_record" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <TextView
                    android:id="@+id/tgl_absensi_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingBottom="2dp"
                    android:text=""
                    android:textColor="#515151"
                    android:textSize="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/higlight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#9C9C9C"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:id="@+id/warning_mark"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/warning_mark_absensi"
                        android:orientation="horizontal"
                        android:visibility="gone"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="-17dp"
                android:layout_marginBottom="-50dp"
                android:background="@drawable/shape_ornament_absensi_record" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>