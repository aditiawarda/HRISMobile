<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="17dp"
            android:layout_marginRight="170dp"
            android:layout_marginLeft="170dp"
            android:layout_height="3dp"
            android:background="#34455A64"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="13dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/month_calender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="15dp"
                            android:text="Bulan"/>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/year_calender"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="15dp"
                            android:text="Tahun"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.github.sundeepk.compactcalendarview.CompactCalendarView
                            android:id="@+id/compactcalendar_view"
                            android:layout_width="fill_parent"
                            android:paddingRight="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:paddingLeft="10dp"
                            android:layout_height="250dp"
                            app:compactCalendarTargetHeight="250dp"
                            app:compactCalendarTextSize="12sp"
                            app:compactCalendarBackgroundColor="#00FFFFFF"
                            app:compactCalendarDisplayOtherMonthDays="true"
                            app:compactCalendarTextColor="#06589F"
                            app:compactCalendarCurrentSelectedDayBackgroundColor="#D6D6D6"
                            app:compactCalendarCurrentDayBackgroundColor="#FFD9CD"
                            app:compactCalendarMultiEventIndicatorColor="#fff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight=".50"
                                android:gravity="left"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/prevBTN"
                                    android:background="@drawable/ic_baseline_chevron_back"
                                    android:backgroundTint="#8BA6441F"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight=".50"
                                android:gravity="right"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/nextBTN"
                                    android:background="@drawable/ic_baseline_chevron_next"
                                    android:backgroundTint="#8BA6441F"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#7EA6441F"/>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/event_calender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginBottom="5dp"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/close_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_btn"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="TUTUP"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>