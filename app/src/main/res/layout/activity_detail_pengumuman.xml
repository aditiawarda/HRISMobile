<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPengumumanActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-2dp"
                        android:orientation="vertical"
                        android:paddingTop="60dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/image_part"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/image_view"
                                                android:layout_width="match_parent"
                                                android:layout_height="150dp"
                                                app:cardBackgroundColor="#E6E6E6"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="20dp"
                                                android:layout_marginRight="20dp"
                                                android:layout_marginBottom="10dp"
                                                app:cardElevation="5dp"
                                                android:outlineSpotShadowColor="#85000000"
                                                app:cardCornerRadius="6dp"
                                                tools:ignore="TooDeepLayout,UnusedAttribute">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:padding="1dp">

                                                    <androidx.cardview.widget.CardView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:outlineSpotShadowColor="#40000000"
                                                        app:cardCornerRadius="6dp">

                                                        <ImageView
                                                            android:id="@+id/image_pengumuman"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:scaleType="centerCrop"
                                                            android:src="@drawable/company_picture"
                                                            tools:ignore="ContentDescription" />

                                                    </androidx.cardview.widget.CardView>

                                                </LinearLayout>

                                            </androidx.cardview.widget.CardView>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:gravity="right"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/view_btn"
                                                android:layout_marginBottom="20dp"
                                                android:layout_marginRight="30dp"
                                                android:layout_width="33dp"
                                                android:layout_height="33dp"
                                                android:gravity="center"
                                                android:background="@drawable/shape_back_2">

                                                <TextView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:background="@drawable/open_full_img"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="22dp"
                                    android:layout_marginRight="22dp"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical"
                                    android:paddingBottom="30dp">

                                    <TextView
                                        android:id="@+id/author_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textColor="#5C5C5C"
                                        android:text=""/>

                                    <TextView
                                        android:id="@+id/time_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textColor="#9F9F9F"
                                        android:text=""/>

                                    <TextView
                                        android:id="@+id/title_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="15dp"
                                        android:text=""
                                        android:textColor="#5C5C5C"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/deskripsi_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="#5C5C5C"
                                        android:lineSpacingExtra="6dp"
                                        android:layout_marginBottom="15dp"
                                        android:textSize="14dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="DETAIL PENGUMUMAN"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>