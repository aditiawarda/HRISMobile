<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_detail_3"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_account"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_staff_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="ADITIA WARDANI"/>

                <TextView
                    android:id="@+id/nik_staff_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:text="3186150231"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_shift">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E6216"
                    android:drawablePadding="7dp"
                    android:drawableTint="#9E6216"
                    android:drawableLeft="@drawable/ic_baseline_work"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="---- - ----"/>

                <TextView
                    android:id="@+id/jam_shift"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E6216"
                    android:drawablePadding="7dp"
                    android:drawableTint="#9E6216"
                    android:drawableRight="@drawable/ic_baseline_time"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="-- : -- - -- : --"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/checkin_part"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_checkin_3"
                android:layout_weight=".50"
                android:layout_marginRight="-0.5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="#4143C86F"
                    android:textSize="11dp"
                    android:textColor="@color/green"
                    android:text="Check In"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/date_checkin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_date_range"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="---- - -- - --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/time_checkin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_time"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="-- : -- : --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/checkin_point_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_place"
                    android:drawablePadding="7dp"
                    android:textSize="11dp"
                    android:text="-"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/checkout_part"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_checkout_3"
                android:layout_marginLeft="-0.5dp"
                android:layout_weight=".50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="#40FF8080"
                    android:textSize="11dp"
                    android:textColor="@color/red"
                    android:text="Check Out"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/date_checkout_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_date_range"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="---- - -- - --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/time_checkout_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_time"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="-- : -- : --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/checkout_point_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_place"
                    android:drawablePadding="7dp"
                    android:textSize="11dp"
                    android:text="-"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/keterangan_absensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/shape_checkin_4"
            android:layout_weight=".50"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/keterlambatan_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Keterlambatan :"/>

                <TextView
                    android:id="@+id/keterlambatan_checkin"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:drawableTint="#FF1A1A"
                    android:drawableLeft="@drawable/ic_baseline_late"
                    android:drawablePadding="7dp"
                    android:textStyle="bold"
                    android:textColor="#FF1A1A"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="-"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/kelebihan_jam_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Kelebihan Jam Pulang :"/>

                <TextView
                    android:id="@+id/kelebihan_jam"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:drawableTint="#1976D2"
                    android:drawableLeft="@drawable/ic_baseline_time"
                    android:textStyle="bold"
                    android:drawablePadding="7dp"
                    android:textColor="#1976D2"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="-"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>