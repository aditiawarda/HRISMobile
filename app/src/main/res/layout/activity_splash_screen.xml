<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashScreen"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/shape_bar_chat" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center|bottom"
                android:layout_marginTop="-15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:textColor="#696969"
                            android:text="Powered by : "
                            android:textSize="9dp"/>

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_width="125dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/logogap" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:foregroundGravity="center"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/hris_logo_ss" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="13dp"-->
<!--            android:textSize="22dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:text="HRIS MOBILE"/>-->

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="-3dp"-->
<!--            android:textSize="15dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:text="G    E    L    O    R    A"/>-->

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/refresh_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="115dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/refresh_ss_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@drawable/shape_refresh_ss">

                <TextView
                    android:id="@+id/loading_off"
                    android:background="@drawable/loading_ss_disable"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/loadingProgressBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/refresh_label"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="#FFE2DA"
                android:text="REFRESH"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/update_layout"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="bottom"
        android:background="#6A000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/update_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="170dp"
                android:layout_height="3dp"
                android:background="#34455A64"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/icon_app_update"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="5dp"
                            android:text="Update Aplikasi"/>

                        <TextView
                            android:id="@+id/desc_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:lineSpacingExtra="2dp"
                            android:textColor="#696969"
                            android:text="HRIS Mobile Gelora v telah tersedia di Google Play Store"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/update_btn"
                        android:layout_width="0dp"
                        android:layout_weight=".70"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_btn"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:text="UPDATE SEKARANG"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/close_btn"
                        android:layout_width="0dp"
                        android:layout_weight=".30"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_second_btn"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="@color/white"
                            android:text="NANTI"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

