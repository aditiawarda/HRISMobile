<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormInfoPersonalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-3dp"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="23dp"
                        android:paddingRight="23dp"
                        android:paddingTop="75dp"
                        android:paddingBottom="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Nama Lengkap:"/>

                            <TextView
                                android:id="@+id/nama_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#5C5C5C"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Email :"/>

                            <EditText
                                android:id="@+id/email_ed"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:gravity="center|left"
                                android:hint=""
                                android:inputType="textEmailAddress"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:textColor="#595959"
                                android:textColorHighlight="#FFDDB3"
                                android:textColorHint="#AAAAAA"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Jenis Kelamin :"/>

                            <LinearLayout
                                android:id="@+id/mulai_date"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingStart="20dp"
                                android:background="@drawable/shape_feel"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:orientation="vertical"
                                        android:gravity="center|left">

                                        <TextView
                                            android:id="@+id/gender_pilih_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#B15735"
                                            android:textSize="13dp"
                                            android:textStyle="bold"
                                            android:text=""/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_alignParentRight="true"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/shape_btn"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_baseline_down"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Tempat Lahir :"/>

                            <EditText
                                android:id="@+id/tempat_lahir_ed"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:gravity="center|left"
                                android:hint="Ketik Kota Lahir..."
                                android:inputType="textEmailAddress"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:textColor="#595959"
                                android:textColorHighlight="#FFE1BC"
                                android:textColorHint="#DA6F46"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Tanggal Lahir :"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingStart="20dp"
                                android:background="@drawable/shape_feel"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:orientation="vertical"
                                        android:gravity="center|left">

                                        <TextView
                                            android:id="@+id/tanggal_lahir_pilih_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#B15735"
                                            android:textSize="13dp"
                                            android:textStyle="bold"
                                            android:text=""/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_alignParentRight="true"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/shape_btn"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_baseline_date"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="No Handphone :"/>

                            <EditText
                                android:id="@+id/no_hanphone_ed"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:gravity="center|left"
                                android:hint=""
                                android:inputType="textEmailAddress"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:textColor="#595959"
                                android:textColorHighlight="#FFDDB3"
                                android:textColorHint="#AAAAAA"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Status Pernikahan :"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingStart="20dp"
                                android:background="@drawable/shape_feel"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:orientation="vertical"
                                        android:gravity="center|left">

                                        <TextView
                                            android:id="@+id/status_pernikahan_pilih_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#B15735"
                                            android:textSize="13dp"
                                            android:textStyle="bold"
                                            android:text=""/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_alignParentRight="true"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/shape_btn"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_baseline_down"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Agama :"/>

                            <EditText
                                android:id="@+id/agama_ed"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:gravity="center|left"
                                android:hint=""
                                android:inputType="textEmailAddress"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:textColor="#595959"
                                android:textColorHighlight="#FFDDB3"
                                android:textColorHint="#AAAAAA"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Alamat KTP :"/>

                            <EditText
                                android:id="@+id/alamat_ktp_ed"
                                android:layout_width="match_parent"
                                android:gravity="top"
                                android:layout_height="wrap_content"
                                android:minHeight="80dp"
                                android:paddingTop="13dp"
                                android:paddingBottom="13dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:textColor="#595959"
                                android:hint=""
                                android:textSize="14dp"
                                android:textColorHint="#595959"
                                android:textColorHighlight="#FFE1BC"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="#696969"
                                android:text="Alamat Domisili :"/>

                            <Switch
                                android:id="@+id/alamat_domisili_switch"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textColor="#676767"
                                android:text="Sama dengan alamat KTP?"
                                android:textSize="13dp"
                                android:checked="false"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />

                            <EditText
                                android:id="@+id/alamat_domisili_ed"
                                android:layout_width="match_parent"
                                android:gravity="top"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:minHeight="80dp"
                                android:paddingTop="13dp"
                                android:paddingBottom="13dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:background="@drawable/shape_input_form"
                                android:drawablePadding="10dp"
                                android:textColor="#595959"
                                android:hint=""
                                android:textSize="14dp"
                                android:textColorHint="#595959"
                                android:textColorHighlight="#FFE1BC"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/submit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/shape_btn"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:drawablePadding="7dp"
                                android:textSize="13dp"
                                android:drawableTint="@color/white"
                                android:textColor="@color/white"
                                android:text="SIMPAN"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="FORM INFO PERSONAL"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>