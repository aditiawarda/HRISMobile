<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListNotifikasiActivity">

    <RelativeLayout
        android:layout_marginRight="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="17dp"
                            android:paddingTop="145dp"
                            android:paddingRight="17dp"
                            android:paddingBottom="20dp">

                            <LinearLayout
                                android:id="@+id/permohonan_masuk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/data_notifikasi_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:visibility="gone">
                                </androidx.recyclerview.widget.RecyclerView>

                                <LinearLayout
                                    android:id="@+id/no_data_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="60dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="20dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/ic_baseline_no_data"
                                        android:textAlignment="center"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Data tidak tersedia"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:text="Data notifikasi tidak tersedia."
                                        android:textAlignment="center"
                                        android:textSize="11dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/loading_data_part"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="60dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="20dp">

                                    <ImageView
                                        android:id="@+id/loading_data_img"
                                        android:layout_width="68dp"
                                        android:layout_height="68dp"
                                        android:layout_marginBottom="5dp"
                                        app:srcCompat="@drawable/loading" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Memuat data"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="Tunggu beberapa saat"
                                        android:textAlignment="center"
                                        android:textSize="11dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/permohonan_saya"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/data_notifikasi_2_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:visibility="gone">
                                </androidx.recyclerview.widget.RecyclerView>

                                <LinearLayout
                                    android:id="@+id/no_data_part_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="60dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="20dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/ic_baseline_no_data"
                                        android:textAlignment="center"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Data tidak tersedia"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:text="Data notifikasi tidak tersedia."
                                        android:textAlignment="center"
                                        android:textSize="11dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/loading_data_part_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="60dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="20dp">

                                    <ImageView
                                        android:id="@+id/loading_data_img_2"
                                        android:layout_width="68dp"
                                        android:layout_height="68dp"
                                        android:layout_marginBottom="5dp"
                                        app:srcCompat="@drawable/loading" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Memuat data"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="Tunggu beberapa saat"
                                        android:textAlignment="center"
                                        android:textSize="11dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_bar_profile_notify"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="11dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back">

                            <TextView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:background="@drawable/ic_baseline_home"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="NOTIFIKASI"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/notify_in_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:background="@drawable/shape_notify_choice"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight=".50">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:text="Permohonan"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    android:text="Masuk"/>

                            </LinearLayout>


                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/count_notification_in"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="4dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="4dp"
                                android:paddingBottom="1dp"
                                android:gravity="center"
                                android:background="@drawable/shape_notification_mark">

                                <TextView
                                    android:id="@+id/count_notif_in_tv"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:text="0"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/notify_out_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:background="@drawable/shape_notify"
                            android:gravity="center"
                            android:layout_weight=".50">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:text="Permohonan"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    android:text="Saya"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/count_notification_me"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="4dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="4dp"
                                android:paddingBottom="1dp"
                                android:gravity="center"
                                android:background="@drawable/shape_notification_mark">

                                <TextView
                                    android:id="@+id/count_notif_me_tv"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:text="0"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>