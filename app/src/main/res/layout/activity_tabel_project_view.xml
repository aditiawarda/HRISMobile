<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabelProjectViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textColor="#A5A5A5"
            android:textSize="11dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="3dp"
            android:maxLines="3"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:id="@+id/project_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memuat data..."
            android:textColor="#C16D02"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pimpinan Project"
                android:textColor="#A5A5A5"
                android:textSize="11dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="4dp"
                android:maxLines="3"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck" />

            <TextView
                android:id="@+id/project_leader_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memuat data..."
                android:textColor="#38A7AC"
                android:textSize="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="7dp"
                android:maxLines="3"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7A7A7A"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#FFD0C2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taks"
                        android:textColor="#7E4024"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck,VisualLintLongText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#FFD0C2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Start"
                        android:textColor="#7E4024"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck,VisualLintLongText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="#FFD0C2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Finish"
                        android:textColor="#7E4024"
                        android:textSize="12dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextSizeCheck,VisualLintLongText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:background="#FFD0C2"
                    android:paddingBottom="5dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Status"
                        android:textColor="#7E4024"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="match_parent"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:background="#FFD0C2"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Progress"
                        android:textColor="#7E4024"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#7A7A7A"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7A7A7A"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/data_task_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/no_data_part_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#7A7A7A"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".99"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="35dp">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/empty_image"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage,TooDeepLayout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:text="Data tidak tersedia"
                        android:textAlignment="center"
                        android:textColor="#E1BB8A"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data task tidak tersedia"
                        android:textAlignment="center"
                        android:textColor="#ECC28D"
                        android:textSize="10dp"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7A7A7A"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#7A7A7A"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>