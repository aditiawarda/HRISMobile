<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_id_card_bg"
    tools:context=".DigitalCardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/shape_id_card"
            android:orientation="vertical"
            android:gravity="center|top">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/gap_header"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/glogo_4" />

                        <LinearLayout
                            android:background="#6BC5907C"
                            android:layout_width="2dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/suma_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/erlass_header"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/logo_erlass_2" />

                        <LinearLayout
                            android:background="#6BC5907C"
                            android:layout_width="2dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="90dp"/>

                        <ImageView
                            android:foregroundGravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/logo_erlass" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/qr_karyawan"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:foregroundGravity="center"
                            android:src="@drawable/loading_prog_2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:id="@+id/nama_karyawan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="#F15A0A"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nik_karyawan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Footer-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <LinearLayout
                            android:id="@+id/gap_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PT. GELORA AKSARA PRATAMA"
                                android:textAlignment="center"
                                android:textColor="#00659C"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Web &amp; Sheetfed Offset Printing"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Prepress | Press | Post Press | Publishing"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="55dp"
                                    android:layout_height="4dp"
                                    android:layout_marginRight="2dp"
                                    android:background="#448AFF" />

                                <LinearLayout
                                    android:layout_width="55dp"
                                    android:layout_height="4dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:background="#FF5252" />

                                <LinearLayout
                                    android:layout_width="55dp"
                                    android:layout_height="4dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:background="#FFD740" />

                                <LinearLayout
                                    android:layout_width="55dp"
                                    android:layout_height="4dp"
                                    android:layout_marginLeft="2dp"
                                    android:background="#7A7675" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/erlass_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="YAYASAN ERLASS KREATIF BANGSA"
                                android:textAlignment="center"
                                android:textColor="#00659C"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KB, TK, SD, &amp; Pusat Kreatif Anak"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="13dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center">

            <LinearLayout
                android:id="@+id/capture_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_btn_capture"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_save"
                    android:drawablePadding="7dp"
                    android:drawableTint="@color/white"
                    android:text="UNDUH ID CARD"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_marginTop="23dp"
            android:paddingLeft="76dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="ID CARD DIGITAL"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:background="@drawable/shape_back_2">

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="1.5dp"
                android:background="@drawable/ic_baseline_chevron_back"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>