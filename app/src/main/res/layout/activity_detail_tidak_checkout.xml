<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTidakCheckoutActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="90dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:paddingBottom="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape_attantion">

                                <TextView
                                    android:id="@+id/name_of_user_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="13dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="#B1670B"
                                    android:textStyle="bold"
                                    android:text=""
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:orientation="horizontal"
                                tools:ignore="DisableBaselineAlignment">

                                <LinearLayout
                                    android:id="@+id/month_btn"
                                    android:layout_width="0dp"
                                    android:layout_weight=".40"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:background="@drawable/shape_data_absen"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="Data Periode"
                                        android:textColor="@color/white"
                                        android:textSize="10dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TooDeepLayout" />

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/bulan_data"
                                        android:layout_marginTop="0.5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textSize="16dp"
                                        android:textStyle="bold"
                                        android:text=""
                                        tools:ignore="SpUsage" />

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/tahun_data"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:text=""
                                        tools:ignore="SpUsage" />

                                    <ImageView
                                        android:id="@+id/bulan_loading"
                                        android:layout_width="match_parent"
                                        android:layout_height="40.5dp"
                                        app:srcCompat="@drawable/loading_dots"
                                        tools:ignore="ContentDescription" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight=".60"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight=".50"
                                        android:background="@drawable/shape_no_checkout"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="vertical"
                                        tools:ignore="NestedWeights,RtlHardcoded,UselessParent">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:paddingTop="10dp"
                                                android:paddingBottom="10dp"
                                                android:paddingRight="15dp"
                                                android:paddingLeft="15dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="Total Tidak Checkout"
                                                    android:textColor="@color/white"
                                                    android:textSize="10dp"
                                                    android:textStyle="bold"
                                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                                <TextView
                                                    android:visibility="gone"
                                                    android:id="@+id/data_nocheckout"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="@color/white"
                                                    android:textSize="30dp"
                                                    android:textStyle="bold"
                                                    android:text="0"
                                                    tools:ignore="HardcodedText,SpUsage" />

                                                <ImageView
                                                    android:id="@+id/nocheckout_loading"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="40.5dp"
                                                    app:srcCompat="@drawable/loading_dots"
                                                    tools:ignore="ContentDescription" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:gravity="right"
                                                android:paddingTop="7dp"
                                                android:paddingRight="7dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                tools:ignore="RtlSymmetry">

                                                <LinearLayout
                                                    android:visibility="gone"
                                                    android:id="@+id/marker_warning_nocheckout_detail"
                                                    android:layout_width="15dp"
                                                    android:layout_height="15dp"
                                                    android:gravity="center">

                                                    <ImageView
                                                        android:id="@+id/warning_gif_absen_nocheckout_detail"
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        app:srcCompat="@drawable/ic_warning_notification_gif"
                                                        tools:ignore="ContentDescription" />

                                                </LinearLayout>

                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/attantion_part_nocheckout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:orientation="vertical"
                            android:background="@drawable/shape_attantion_red">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#CD4E4B"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:text="Perhatian :"
                                tools:ignore="HardcodedText,SpUsage" />

                            <TextView
                                android:id="@+id/message_nocheckout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#CD4E4B"
                                android:textSize="12dp"
                                android:lineSpacingExtra="2.5dp"
                                android:layout_marginTop="7dp"
                                android:text="Jika terdapat kekeliruan data, harap segera hubungi bagian HRD atau gunakan prosedur fingerscan/form keterangan tidak absen."
                                tools:ignore="HardcodedText,SpUsage" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#3CCFCFCF"/>

                        <LinearLayout
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:visibility="gone"
                                android:id="@+id/data_nocheckout_rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                            </androidx.recyclerview.widget.RecyclerView>

                            <LinearLayout
                                android:id="@+id/no_data_part_nocheckout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="55dp"
                                android:paddingBottom="35dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="85dp"
                                    android:layout_height="85dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/empty_image"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Data tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Data tidak checkout tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loading_data_part_nocheckout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="60dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="35dp">

                                <ImageView
                                    android:id="@+id/loading_data_nocheckout"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginBottom="5dp"
                                    app:srcCompat="@drawable/loading_sgn_digital"
                                    tools:ignore="ContentDescription,ImageContrastCheck" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="DETAIL TIDAK CHECKOUT"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>