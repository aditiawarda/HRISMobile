<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailReportSumaActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="65dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="15dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:id="@+id/report_kategori_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="KATEGORI LAPORAN "
                                        android:textColor="#B1670B"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck,TooDeepLayout" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                android:paddingBottom="30dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:text="Detail Pelanggan"
                                        android:textColor="#515151"
                                        android:textStyle="bold"
                                        android:textSize="13dp"
                                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Nama"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TooDeepLayout" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/nama_pelanggan_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Alamat"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/alamat_pelanggan_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="PIC"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/pic_pelanggan_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Telepon"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/telepon_pelanggan_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1.5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="#3CCFCFCF" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:text="Data Sales"
                                        android:textColor="#515151"
                                        android:textStyle="bold"
                                        android:textSize="13dp"
                                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Nama"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/nama_sales_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="NIK"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/nik_sales_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/maps_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:layout_marginTop="10dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#DE5A5A5A"
                                            android:padding="0.5dp"
                                            android:layout_marginBottom="15dp">

                                            <fragment
                                                android:id="@+id/map"
                                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                                android:layout_width="match_parent"
                                                android:layout_height="300dp"
                                                tools:ignore="FragmentTagUsage" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".25"
                                                android:text="Detail Titik"
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="0dp"
                                                android:layout_weight=".65"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="5dp"
                                                    android:text=":  "
                                                    android:textColor="#515151"
                                                    android:textSize="12dp"
                                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                                <TextView
                                                    android:id="@+id/detail_location_tv"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="5dp"
                                                    android:layout_weight=".65"
                                                    android:text="Memuat data..."
                                                    android:textColor="#515151"
                                                    android:textSize="12dp"
                                                    tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Keterangan"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/keterangan_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/tgl_rencana_part"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight=".25"
                                            android:text="Tgl Rencana"
                                            android:textColor="#515151"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_weight=".65"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:text=":  "
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                            <TextView
                                                android:id="@+id/tgl_rencana_tv"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:layout_weight=".65"
                                                android:text="Memuat data..."
                                                android:textColor="#515151"
                                                android:textSize="12dp"
                                                tools:ignore="HardcodedText,NestedWeights,SpUsage,TextSizeCheck" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/view_lampiran_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:background="@drawable/shape_second_btn">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_baseline_content_surat"
                                        android:drawablePadding="7dp"
                                        android:gravity="center"
                                        android:text="Lihat Lampiran"
                                        android:textColor="@color/white"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,UseCompatTextViewDrawableXml,TextSizeCheck,TextContrastCheck" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="-2dp"
                    android:layout_marginLeft="-2dp"
                    android:background="@drawable/shape_bar_chat"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    tools:ignore="UselessParent,VisualLintBounds">

                    <LinearLayout
                        android:id="@+id/back_btn"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:background="@drawable/shape_back_2"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="1.5dp"
                            android:background="@drawable/ic_baseline_chevron_back"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right|center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="DETAIL LAPORAN"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

