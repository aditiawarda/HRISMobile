<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_bar_chat"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/shape_back_2"
            android:gravity="center"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="1.5dp"
                android:background="@drawable/ic_baseline_chevron_back"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:text="FORM PEMINJAMAN KENDARAAN"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Surat">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nomer_surat"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tanggal_surat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="/EXP/GAP/"
                    android:textSize="17sp">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/no_surat_validation"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Sedang verifikasi nomor"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="17sp">
                </TextView>

                <EditText
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordered_spinner"
                    android:paddingHorizontal="15dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Bagian"
                    android:textSize="17sp">

                </TextView>

                <EditText
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/et_bagian"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordered_spinner"
                    android:paddingHorizontal="15dp">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari / tanggal"
                    android:textSize="17sp">

                </TextView>

                <LinearLayout
                    android:id="@+id/keluar_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_feel"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center|left"
                            android:orientation="vertical"
                            tools:ignore="RelativeOverlap,RtlHardcoded">

                            <TextView
                                android:id="@+id/hari"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#B15735"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_btn"
                            android:gravity="center"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/ic_baseline_jam_masuk" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="15dp"
                            android:paddingTop="95dp"
                            android:paddingBottom="20dp"
                            android:visibility="invisible">

                            <ProgressBar
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="25dp"
                                android:indeterminateTint="@color/colorAccent2"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-8dp"
                                android:text="Memuat data"
                                android:textAlignment="center"
                                android:textColor="#E1BB8A"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tunggu beberapa saat"
                                android:textAlignment="center"
                                android:textColor="#ECC28D"
                                android:textSize="10dp"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tujuan"
                    android:textSize="17sp">

                </TextView>

                <EditText
                    android:id="@+id/tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keperluan"
                    android:textSize="17sp">
                </TextView>

                <EditText
                    android:id="@+id/keperluan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp">
                </EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kendaraan"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Spinner
                        android:id="@+id/kendaraan_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bordered_spinner"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dropdown"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="10dp"
                        android:layout_marginRight="8dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="No. Kendaraan"
                    android:textSize="17sp">
                </TextView>

                <AutoCompleteTextView
                    android:id="@+id/no_kendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordered_spinner"
                    android:paddingHorizontal="15dp">
                </AutoCompleteTextView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/plat_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Checking The Number"
                    android:textSize="17sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_kendaraan"
                android:background="@drawable/bordered_spinner"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/roboto"
                        android:text="Nama"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text=":"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:id="@+id/detail_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="Detail Nama"
                        android:textSize="11sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/roboto"
                        android:text="Jenis"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text=":"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:id="@+id/detail_jenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="Detail Nama"
                        android:textSize="11sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/roboto"
                        android:text="Kategori"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text=":"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:id="@+id/detail_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="Detail Nama"
                        android:textSize="11sp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/roboto"
                        android:text="Plat Nomor"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text=":"
                        android:textSize="11sp"></TextView>

                    <TextView
                        android:id="@+id/detail_plat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="Detail Nama"
                        android:textSize="11sp"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/edit_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Keluar"
                        android:textSize="17sp">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/jam_picker"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_feel"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        tools:ignore="RtlSymmetry">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                tools:ignore="RelativeOverlap,RtlHardcoded">

                                <TextView
                                    android:id="@+id/jam_keluar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#B15735"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/shape_btn"
                                android:gravity="center"
                                tools:ignore="RtlHardcoded">

                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/ic_baseline_jam_masuk" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingHorizontal="15dp"
                                android:paddingTop="95dp"
                                android:paddingBottom="20dp"
                                android:visibility="invisible">

                                <ProgressBar
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="25dp"
                                    android:indeterminateTint="@color/colorAccent2"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-8dp"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#E1BB8A"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#ECC28D"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Km"
                        android:textSize="17sp">
                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="110px"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bordered_spinner"
                        android:paddingHorizontal="15dp">
                    </EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bersih/Kotor"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Spinner
                            android:id="@+id/bersih_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bordered_spinner"
                            android:padding="8dp"
                            android:spinnerMode="dropdown"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dropdown"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="10dp"
                            android:layout_marginRight="8dp" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBM"
                        android:textSize="17sp">
                    </TextView>

                    <com.gelora.absensi.support.FuelGaugeView
                        android:id="@+id/fuelGaugeView"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                    <SeekBar
                        android:id="@+id/fuelSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fuelGaugeView"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginTop="25dp"
                        android:max="100" />

                    <TextView
                        android:id="@+id/percentageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fuelSeekBar"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="40dp"
                        android:fontFamily="@font/roboto"
                        android:text="50%"
                        android:textSize="21sp" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/kirim_btn"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Kirim"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cornerRadius="40dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>