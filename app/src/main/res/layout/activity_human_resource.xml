<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumanResourceActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="120dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/header_background"
                                    android:layout_width="match_parent"
                                    android:layout_height="190dp"
                                    android:layout_marginLeft="-3dp"
                                    android:layout_marginTop="-3.5dp"
                                    android:layout_marginRight="-3dp"
                                    android:background="@drawable/shape_bar_chat"
                                    android:orientation="vertical"
                                    android:paddingLeft="28dp"
                                    android:paddingTop="30dp"
                                    android:paddingBottom="25dp"
                                    android:paddingRight="28dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:id="@+id/back_btn"
                                            android:layout_width="33dp"
                                            android:layout_height="33dp"
                                            android:gravity="center"
                                            android:background="@drawable/shape_back_2">

                                            <TextView
                                                android:layout_width="28dp"
                                                android:layout_height="28dp"
                                                android:layout_marginRight="1.5dp"
                                                android:background="@drawable/ic_baseline_chevron_back"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:gravity="right|center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:gravity="right"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textStyle="bold"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="SDM"
                                                android:textColor="@color/white"
                                                android:textSize="15dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:background="#FFEDE8"
                                    android:layout_width="match_parent"
                                    android:layout_height="28.5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="100dp"
                                android:orientation="horizontal"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp">

                                <LinearLayout
                                    android:id="@+id/permohonan_cuti_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:layout_weight=".50"
                                    android:background="@drawable/shape_menu_info"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentRight="true"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:layout_width="50dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginBottom="-20dp"
                                                android:background="@drawable/shape_ornament_1" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="70dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="-20dp"
                                            android:background="@drawable/shape_ornament_1" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:paddingLeft="15dp"
                                            android:paddingTop="20dp"
                                            android:paddingRight="15dp"
                                            android:paddingBottom="20dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="90dp"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/permohonan_izin_ic" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Formulir"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="11dp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Penilaian SDM"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="14dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:visibility="gone"
                                            android:layout_alignParentRight="true"
                                            android:id="@+id/count_notification_izin"
                                            android:layout_marginRight="12dp"
                                            android:layout_marginTop="11dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingRight="4dp"
                                            android:paddingLeft="4dp"
                                            android:paddingBottom="1dp"
                                            android:gravity="center"
                                            android:background="@drawable/shape_notification_mark_info">

                                            <TextView
                                                android:id="@+id/count_notif_izin_tv"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/white"
                                                android:textSize="12dp"
                                                android:text="0"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/permohonan_finger_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:layout_weight=".50"
                                    android:background="@drawable/shape_menu_info"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentRight="true"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:layout_width="50dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginBottom="-20dp"
                                                android:background="@drawable/shape_ornament_1" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="70dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="-20dp"
                                            android:background="@drawable/shape_ornament_1" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:paddingLeft="15dp"
                                            android:paddingTop="20dp"
                                            android:paddingRight="15dp"
                                            android:paddingBottom="20dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="90dp"
                                                android:scaleType="fitCenter"
                                                android:src="@drawable/permohonan_finger_ic" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Permohonan"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="11dp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Fingerscan"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="14dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:visibility="gone"
                                            android:layout_alignParentRight="true"
                                            android:id="@+id/count_notification_finger"
                                            android:layout_marginRight="12dp"
                                            android:layout_marginTop="11dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingRight="4dp"
                                            android:paddingLeft="4dp"
                                            android:paddingBottom="1dp"
                                            android:gravity="center"
                                            android:background="@drawable/shape_notification_mark_info">

                                            <TextView
                                                android:id="@+id/count_notif_finger_tv"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/white"
                                                android:textSize="12dp"
                                                android:text="0"/>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>