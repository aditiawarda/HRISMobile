<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryCutiIzinActivity">

    <RelativeLayout
        android:layout_marginRight="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="90dp"
                            android:paddingRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape_attantion"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/name_of_user_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#B1670B"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:background="@drawable/shape_data_absen"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentEnd="true"
                                            android:background="@drawable/shape_background_cuti_2_part"
                                            android:gravity="right|center" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:paddingLeft="15dp"
                                            android:paddingTop="10dp"
                                            android:paddingRight="15dp"
                                            android:paddingBottom="10dp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Hak Cuti Periode"
                                                android:textColor="@color/white"
                                                android:textSize="10dp"
                                                android:textStyle="bold" />

                                            <RelativeLayout
                                                android:visibility="gone"
                                                android:id="@+id/periode_data_part"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/periode_data"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginRight="95dp"
                                                    android:ellipsize="end"
                                                    android:gravity="center|left"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="00/00/0000 s.d. 00/00/0000"
                                                    android:textColor="@color/white"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold" />

                                                <LinearLayout
                                                    android:layout_width="85dp"
                                                    android:layout_height="55dp"
                                                    android:layout_alignParentRight="true"
                                                    android:background="@drawable/shape_tidak_hadir"
                                                    android:gravity="center"
                                                    android:orientation="horizontal">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:gravity="center"
                                                        android:orientation="horizontal">

                                                        <TextView
                                                            android:id="@+id/hak_cuti_tv"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginRight="8dp"
                                                            android:text="0"
                                                            android:textColor="@color/white"
                                                            android:textSize="17dp"
                                                            android:textStyle="bold" />

                                                        <TextView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Hari"
                                                            android:textColor="@color/white"
                                                            android:textSize="10dp"
                                                            android:textStyle="bold" />

                                                    </LinearLayout>

                                                </LinearLayout>

                                            </RelativeLayout>

                                            <ImageView
                                                android:id="@+id/periode_loading"
                                                android:layout_width="match_parent"
                                                android:layout_height="40.5dp"
                                                android:visibility="visible"
                                                app:srcCompat="@drawable/loading_dots" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="2dp"
                                        android:layout_weight=".50"
                                        android:background="@drawable/shape_tidak_hadir"
                                        android:orientation="vertical"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="10dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:text="Cuti Yang Telah Diambil"
                                            android:textColor="@color/white"
                                            android:textSize="10dp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:id="@+id/data_diambil_part"
                                            android:visibility="gone"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/data_diambil_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="0"
                                                    android:textColor="@color/white"
                                                    android:textSize="30dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="7dp"
                                                    android:text="Hari"
                                                    android:textColor="@color/white"
                                                    android:textSize="17dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/diambil_loading"
                                            android:layout_width="match_parent"
                                            android:layout_height="40.5dp"
                                            app:srcCompat="@drawable/loading_dots" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight=".50"
                                        android:background="@drawable/shape_hadir"
                                        android:orientation="vertical"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="15dp"
                                        android:paddingBottom="10dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:text="Sisa Hak Cuti"
                                            android:textColor="@color/white"
                                            android:textSize="10dp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:id="@+id/data_sisa_part"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <TextView
                                                android:id="@+id/data_sisa_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="30dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="7dp"
                                                android:text="Hari"
                                                android:textColor="@color/white"
                                                android:textSize="17dp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/sisa_loading"
                                            android:layout_width="match_parent"
                                            android:layout_height="40.5dp"
                                            app:srcCompat="@drawable/loading_dots" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="#3CCFCFCF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_marginBottom="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="60dp"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="CUTI"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="14dp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="60dp"
                                                android:ellipsize="end"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:text="Permohonan Menggunakan Form Cuti"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="10dp"
                                                android:textStyle="italic" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="45dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/shape_detail_tidak_hadir"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/total_data_cuti"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/data_cuti_rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </androidx.recyclerview.widget.RecyclerView>

                            <LinearLayout
                                android:id="@+id/no_data_part_cuti"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="20dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/ic_baseline_no_data"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Data tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="Data riwayat cuti tidak tersedia."
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="11dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loading_data_part_cuti"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:id="@+id/loading_data_cuti"
                                    android:layout_width="68dp"
                                    android:layout_height="68dp"
                                    android:layout_marginBottom="5dp"
                                    app:srcCompat="@drawable/loading" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="11dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="20dp"
                            android:background="#3CCFCFCF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="38dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="20dp"
                                            android:gravity="center|left">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginRight="60dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="IZIN"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginRight="60dp"
                                                    android:ellipsize="end"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="Permohonan Menggunakan Form Izin"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="10dp"
                                                    android:textStyle="italic" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="45dp"
                                            android:layout_height="38dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="20dp"
                                            android:background="@drawable/shape_detail_tidak_hadir"
                                            android:gravity="center">

                                            <TextView
                                                android:id="@+id/total_data_izin"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:textColor="@color/white"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="13dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="13dp"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:id="@+id/marker_warning_alpha_detail"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:gravity="center"
                                                android:visibility="gone">

                                                <ImageView
                                                    android:id="@+id/warning_gif_absen_nocheckout_detail"
                                                    android:layout_width="15dp"
                                                    android:layout_height="15dp"
                                                    app:srcCompat="@drawable/ic_warning_notification_gif_main" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/data_izin_rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                android:visibility="gone">
                            </androidx.recyclerview.widget.RecyclerView>

                            <LinearLayout
                                android:id="@+id/no_data_part_izin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="20dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/ic_baseline_no_data"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Data tidak tersedia"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="Data riwayat izin tidak tersedia."
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="11dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/loading_data_part_izin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:id="@+id/loading_data_izin"
                                    android:layout_width="68dp"
                                    android:layout_height="68dp"
                                    android:layout_marginBottom="5dp"
                                    app:srcCompat="@drawable/loading" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Memuat data"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Tunggu beberapa saat"
                                    android:textAlignment="center"
                                    android:textColor="#7C7C7C"
                                    android:textSize="11dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_profile"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="11dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back">

                            <TextView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:background="@drawable/ic_baseline_home"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="RIWAYAT CUTI/IZIN"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>