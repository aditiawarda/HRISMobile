<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_pengumuman"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="23dp"
        tools:ignore="RtlHardcoded,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,UselessParent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:layout_weight=".75"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA KARYAWAN"
                    android:textColor="#C16D02"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                <TextView
                    android:id="@+id/nik_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000011"
                    android:textColor="#C16D02"
                    android:textSize="11dp"
                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                <TextView
                    android:id="@+id/jabatan_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Staff"
                    android:textColor="#C16D02"
                    android:textSize="11dp"
                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                <TextView
                    android:id="@+id/detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDP | RND"
                    android:textColor="#C16D02"
                    android:textSize="11dp"
                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="right|center"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/default_profile"
                        app:civ_border_color="#BDBDBD"
                        app:civ_border_width="1dp"
                        tools:ignore="ImageContrastCheck" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/default_profile"
                        app:civ_border_color="#BDBDBD"
                        app:civ_border_width="1dp"
                        tools:ignore="ImageContrastCheck" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>