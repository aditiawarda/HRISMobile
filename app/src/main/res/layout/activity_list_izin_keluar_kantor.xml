<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ListIzinKeluarKantor">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tab_bar"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck">

                    <LinearLayout
                        android:id="@+id/parent_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <LinearLayout
                            android:id="@+id/action_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:id="@+id/scanner_btn"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_btn_edit_permohonan"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:ignore="InefficientWeight,RtlHardcoded">

                            <LinearLayout
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/baseline_qr_code_scanner"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:drawablePadding="7dp"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:text="QR Code Scanner"
                                tools:ignore="HardcodedText,SpUsage" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/expandable_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"/>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/add_btn_part"
                    android:gravity="bottom|right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:id="@+id/btn_add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/shape_new_chat">

                            <TextView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_baseline_new_chat"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_label_add_button"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingLeft="6dp"
                            android:paddingTop="3dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:text="BUAT "
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/appbar"
                    android:layout_marginTop="-2dp"
                    android:layout_marginRight="-2dp"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_bar_chat"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:id="@+id/back_btn"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:background="@drawable/shape_back_2"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="1.5dp"
                            android:background="@drawable/ic_baseline_chevron_back"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right|center"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="IZIN KELUAR KANTOR"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_bar"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="85dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        tools:ignore="DisableBaselineAlignment">

                        <LinearLayout
                            android:id="@+id/permohonan_masuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/shape_notify_choice"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:ignore="RtlHardcoded">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="13dp"
                                    android:paddingBottom="13dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Permohonan"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck,TooDeepLayout" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Masuk"
                                        android:textColor="@color/white"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="right"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingLeft="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlHardcoded">

                                    <LinearLayout
                                        android:id="@+id/count_in_part"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="1dp"
                                        android:background="@drawable/shape_notification_mark"
                                        android:gravity="center"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:paddingBottom="1dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/count_in_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage" />

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/permohonan_saya"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/shape_notify"
                            android:gravity="center"
                            tools:ignore="RtlHardcoded">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="13dp"
                                    android:paddingBottom="13dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Permohonan"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Saya"
                                        android:textColor="@color/white"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="right"
                                    android:paddingTop="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingLeft="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlHardcoded">

                                    <LinearLayout
                                        android:id="@+id/count_notification_me"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="1dp"
                                        android:background="@drawable/shape_notification_mark"
                                        android:gravity="center"
                                        android:paddingLeft="4dp"
                                        android:paddingRight="4dp"
                                        android:paddingBottom="1dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/count_notif_me_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="12dp"
                                            tools:ignore="HardcodedText,SpUsage" />

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F0F0F0"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/waiting_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="17dp"
        android:paddingTop="190dp"
        android:paddingRight="17dp"
        android:paddingBottom="20dp"
        tools:ignore="MissingConstraints,UselessParent">

        <LinearLayout
            android:id="@+id/no_data_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/empty_image"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:text="Data tidak tersedia"
                android:textAlignment="center"
                android:textColor="#E1BB8A"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data izin keluar kantor tidak tersedia"
                android:textAlignment="center"
                android:textColor="#ECC28D"
                android:textSize="10dp"
                tools:ignore="HardcodedText,SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_data_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <ProgressBar
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:indeterminateTint="@color/colorAccent2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:text="Memuat data"
                android:textAlignment="center"
                android:textColor="#E1BB8A"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tunggu beberapa saat"
                android:textAlignment="center"
                android:textColor="#ECC28D"
                android:textSize="10dp"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>