<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_detail_3"
            android:gravity="center|left">

            <TextView
                android:id="@+id/date_absen_tv_late"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:drawablePadding="7dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_baseline_date"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="---- - -- - --"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape_shift">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_shift_late"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E6216"
                    android:drawablePadding="7dp"
                    android:drawableTint="#9E6216"
                    android:drawableLeft="@drawable/ic_baseline_work"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="---- - ----"/>

                <TextView
                    android:id="@+id/jam_shift_late"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E6216"
                    android:drawablePadding="7dp"
                    android:drawableTint="#9E6216"
                    android:drawableRight="@drawable/ic_baseline_time"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="-- : -- - -- : --"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_checkin_4"
                android:layout_weight=".50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingTop="7dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="#4143C86F"
                    android:textSize="11dp"
                    android:textColor="@color/green"
                    android:text="Check In"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/date_checkin_tv_late"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_date_range"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="---- - -- - --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/time_checkin_tv_late"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_time"
                    android:drawablePadding="7dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="11dp"
                    android:text="-- : -- : --"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/checkin_point_tv_late"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_place"
                    android:drawablePadding="7dp"
                    android:textSize="11dp"
                    android:text="-"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Keterlambatan :"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/keterlambatan_tv"
                    android:layout_width="match_parent"
                    android:drawableTint="#FF1A1A"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_late"
                    android:drawablePadding="7dp"
                    android:textSize="11dp"
                    android:text="-"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>