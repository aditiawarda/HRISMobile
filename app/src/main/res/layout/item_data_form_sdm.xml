<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_notifikasi"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="-25dp"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_ornament_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/shape_ornament_point"
                    android:layout_marginRight="8dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>

                <TextView
                    android:id="@+id/keterangan_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3.5dp"
                    android:text=""
                    android:textColor="#C16D02"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/line_limit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#2DEFB975"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/detail_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="-"
                android:textColor="#C16D02"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/timestamp_data_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:gravity="right"
                android:text="-"
                android:textColor="#C16D02"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/shape_ornament_1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>