<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VisiMisiActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-2dp"
                android:orientation="vertical"
                android:paddingTop="60dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:id="@+id/main_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="25dp"
                                android:paddingRight="25dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape_visi_misi">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="2dp"
                                    android:text="Visi"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/visi_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:lineSpacingExtra="3.5dp"
                                android:justificationMode="inter_word"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="15dp"
                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck,UnusedAttribute" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="25dp"
                                android:paddingRight="25dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_visi_misi">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="2dp"
                                    android:text="Misi"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/misi_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:lineSpacingExtra="3.5dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:justificationMode="inter_word"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="15dp"
                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck,UnusedAttribute,VisualLintLongText" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loading_part"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="60dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="20dp"
                            android:paddingBottom="35dp">

                            <ImageView
                                android:id="@+id/loading_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@drawable/loading_sgn_digital"
                                tools:ignore="ContentDescription,ImageContrastCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-8dp"
                                android:text="Memuat data"
                                android:textAlignment="center"
                                android:textColor="#E1BB8A"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tunggu beberapa saat"
                                android:textAlignment="center"
                                android:textColor="#ECC28D"
                                android:textSize="10dp"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/shape_bar_chat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                tools:ignore="UselessParent,VisualLintBounds">

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:background="@drawable/shape_back_2"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="1.5dp"
                        android:background="@drawable/ic_baseline_chevron_back"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="right|center"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="VISI DAN MISI PERUSAHAAN"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>