<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDataSerahTerimaExitClearanceActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="75dp"
                        android:paddingBottom="3dp"
                        tools:ignore="UselessLeaf">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <LinearLayout
                                android:id="@+id/name_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:paddingBottom="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/shape_attantion">

                                <TextView
                                    android:id="@+id/name_of_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="ADITI WARDANI"
                                    android:textColor="#B1670B"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:background="@drawable/shape_feel">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="DisableBaselineAlignment">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight=".50"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:text="Tanggl Masuk"
                                            android:textColor="#9E9E9E"
                                            android:textSize="11dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,TextContrastCheck" />

                                        <TextView
                                            android:id="@+id/tgl_masuk"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="3dp"
                                            android:text="00/00/0000"
                                            android:textColor="#696969"
                                            android:textSize="13dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight=".50"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content"
                                        tools:ignore="RtlHardcoded">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginBottom="2dp"
                                            android:text="Tanggal Keluar"
                                            android:textColor="#9E9E9E"
                                            android:textSize="11dp"
                                            tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                        <TextView
                                            android:id="@+id/tgl_keluar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="3dp"
                                            android:text="00/00/0000"
                                            android:textColor="#696969"
                                            android:textSize="13dp"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="2dp"
                                android:text="Serah Terima Exit Clearance"
                                android:textColor="#696969"
                                android:textSize="10dp"
                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/serah_terima_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Memuat data..."
                                    android:textColor="#696969"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/status_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="right"
                                    android:text="Memuat..."
                                    android:textColor="#D37E00"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck,TextContrastCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/st_1_upload_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingStart="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/shape_feel"
                                android:orientation="horizontal"
                                tools:ignore="RtlSymmetry">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    tools:ignore="UselessParent">

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="match_parent"
                                        android:paddingRight="60dp"
                                        android:layout_height="40dp"
                                        android:orientation="vertical"
                                        android:gravity="center|left"
                                        tools:ignore="RtlHardcoded,RtlSymmetry">

                                        <TextView
                                            android:id="@+id/lampiran_tv"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:gravity="left"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:text="Memuat Lampiran..."
                                            android:textColor="#B15735"
                                            android:textSize="13dp"
                                            android:textStyle="bold"
                                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/lampiran_btn"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/shape_btn"
                                        android:gravity="center"
                                        tools:ignore="RtlHardcoded">

                                        <TextView
                                            android:visibility="visible"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_baseline_content_surat" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_profile_notify"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"
                                tools:ignore="RtlHardcoded" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="DETAIL SERAH TERIMA EXIT CLEARANCE"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.flipboard.bottomsheet.BottomSheetLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

        </com.flipboard.bottomsheet.BottomSheetLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>