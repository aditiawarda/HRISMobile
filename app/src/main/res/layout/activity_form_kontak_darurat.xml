<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormKontakDaruratActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/form_part"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="85dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Nama Lengkap :"
                                    android:textColor="#696969"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />

                                <EditText
                                    android:id="@+id/nama_ed"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/shape_input_form"
                                    android:drawablePadding="10dp"
                                    android:gravity="center|left"
                                    android:hint=""
                                    android:inputType="text"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="#595959"
                                    android:textColorHighlight="#FFDDB3"
                                    android:textColorHint="#AAAAAA"
                                    android:textSize="13dp"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Kontak :"
                                    android:textColor="#696969"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />

                                <LinearLayout
                                    android:id="@+id/kontak_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:gravity="center|left"
                                            android:orientation="vertical"
                                            tools:ignore="RelativeOverlap">

                                            <TextView
                                                android:id="@+id/kontak_pilih_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:textColor="#B15735"
                                                android:textSize="13dp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_person" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Hubungan :"
                                    android:textColor="#696969"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />

                                <LinearLayout
                                    android:id="@+id/hubungan_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/shape_feel"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:gravity="center|left"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/hubungan_pilih_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:textColor="#B15735"
                                                android:textSize="13dp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:background="@drawable/shape_btn"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:background="@drawable/ic_baseline_down" />

                                        </LinearLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/hubungan_lainnya_part"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:text="Hubungan Lainnya :"
                                        android:textColor="#696969"
                                        android:textSize="12dp" />

                                    <EditText
                                        android:id="@+id/hubungan_lainnya_ed"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/shape_input_form"
                                        android:drawablePadding="10dp"
                                        android:gravity="center|left"
                                        android:hint=""
                                        android:inputType="text"
                                        android:paddingLeft="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="20dp"
                                        android:paddingBottom="10dp"
                                        android:textColor="#595959"
                                        android:textColorHighlight="#FFDDB3"
                                        android:textColorHint="#AAAAAA"
                                        android:textSize="13dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/submit_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/shape_btn"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="7dp"
                                    android:drawableTint="@color/white"
                                    android:text="SIMPAN"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    tools:ignore="TextSizeCheck" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/success_submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="23dp"
                            android:paddingTop="85dp"
                            android:paddingRight="23dp"

                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:background="@drawable/shape_success"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="50dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="30dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Data Tersimpan"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/message_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:text="Data kontak darurat berhasil tersimpan, dengan ini anda menyatakan semua data yang telah diisi bersifat valid."
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="13dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/success_gif"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/shape_ring_success"
                                        android:src="@drawable/success_ic" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/back_success_btn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shape_success"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kembali"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="-2dp"
                        android:layout_marginRight="-2dp"
                        android:layout_marginLeft="-2dp"
                        android:background="@drawable/shape_bar_chat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:id="@+id/back_btn"
                            android:layout_marginTop="17dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:background="@drawable/shape_back_2">

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginRight="1.5dp"
                                android:background="@drawable/ic_baseline_chevron_back"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/title_page_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="FORM KONTAK DARURAT"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.flipboard.bottomsheet.BottomSheetLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

        </com.flipboard.bottomsheet.BottomSheetLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>