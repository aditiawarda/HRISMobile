<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_effect"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        tools:ignore="RtlHardcoded,RtlSymmetry,UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="17dp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_weight=".75"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/posisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="3"
                            android:text="Posisi"
                            android:textColor="#4C4C4C"
                            android:textSize="13.5dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                        <TextView
                            android:id="@+id/periode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Periode"
                            android:textColor="#8F8F8F"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:id="@+id/edit_btn"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shape_tools_kontak"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:background="@drawable/ic_baseline_edit_note" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="1.5dp"
                    android:background="#F3F3F3" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>