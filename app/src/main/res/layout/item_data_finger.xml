<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_detail_3"
            android:orientation="vertical"
            android:gravity="center|left"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry,VisualLintBounds">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_ornament_3"/>

            </LinearLayout>

            <TextView
                android:id="@+id/date_permohonan_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_date"
                android:drawablePadding="7dp"
                android:drawableTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="---- - -- - --"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck,UnusedAttribute,UseCompatTextViewDrawableXml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_checkin_4"
                android:layout_weight=".50"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/d_tanggal_masuk"
                            android:layout_width="0dp"
                            android:layout_weight=".50"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Tanggal Masuk"
                                android:textColor="#7A7A7A"
                                android:textSize="10dp"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            <TextView
                                android:id="@+id/d_tanggal_masuk_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text=""
                                android:textColor="#494949"
                                android:textSize="12dp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/d_shift"
                            android:layout_width="0dp"
                            android:layout_weight=".50"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical"
                            tools:ignore="RtlHardcoded">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="Shift Absensi"
                                android:textColor="#7A7A7A"
                                android:textSize="10dp"
                                tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                            <TextView
                                android:id="@+id/d_shift_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text=""
                                android:textColor="#494949"
                                android:textSize="12dp"
                                tools:ignore="SpUsage" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="1dp"
                        android:background="#DCDCDC"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/d_keterangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Keterangan"
                                    android:textColor="#7A7A7A"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/d_keterangan_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text=""
                                    android:textColor="#494949"
                                    android:textSize="12dp"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/d_alasan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Alasan"
                                    android:textColor="#7A7A7A"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/d_alasan_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text=""
                                    android:lineSpacingExtra="3dp"
                                    android:textColor="#494949"
                                    android:textSize="12dp"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/d_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Status"
                                    android:textColor="#7A7A7A"
                                    android:textSize="10dp"
                                    tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck" />

                                <TextView
                                    android:id="@+id/d_status_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text=""
                                    android:textColor="#494949"
                                    android:textSize="12dp"
                                    tools:ignore="SpUsage" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:gravity="right|bottom"
                            android:orientation="vertical"
                            tools:ignore="RtlHardcoded,RtlSymmetry">

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/accepted_mark"
                                android:layout_width="100dp"
                                android:layout_height="48dp"
                                android:background="@drawable/accepted_img"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/rejected_mark"
                                android:layout_width="100dp"
                                android:layout_height="48dp"
                                android:background="@drawable/rejected_img"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/waiting_mark"
                                android:layout_width="60dp"
                                android:layout_height="48dp"
                                android:background="@drawable/waiting_img"
                                android:orientation="horizontal" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>